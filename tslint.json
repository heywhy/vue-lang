{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended"
  ],
  "jsRules": {},
  "rules": {
    "member-access": [
      true,
      "no-public"
    ],
    "arrow-parens": [true, "ban-single-arg-parens"],
    "curly": [
      true,
      "as-needed"
    ],
    "semicolon": [
      true,
      "never"
    ],
    "quotemark": [
      true,
      "single",
      "avoid-escape",
      "avoid-template"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "never",
          "arrays": "never",
          "functions": "never",
          "typeLiterals": "never"
        },
        "esSpecCompliant": true
      }
    ],
    "ordered-imports": [
      true,
      {
        "import-sources-order": "any",
        "named-imports-order": "any"
      }
    ]
  },
  "rulesDirectory": [],
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules"
  ]
}
